<div id="left">
    <div id="leftScrollable">
        <div id="logoContainer">
            <img src="images/logo.svg" id="logoImage">
        </div>
        <div>
            <a class="leftButton <%= activeCategory == "home" ? "selectedButton": "" %>" id="homeButtonLeft" href="/home">
                <img src="<%- activeCategory == "home" ? "images/icons/home.svg" : "images/icons/home-blurred.svg" %>">
                <p class="leftButtonText">
                    Home
                </p>
            </a>
            <% if(loggedIn) { %>
                <a class="leftButton <%- activeCategory == "post" ? "selectedButton" : "" %>" id="postButtonLeft" href="/create-post">
                    <img src="<%- activeCategory == "post" ? "images/icons/plusLeft.svg" : "images/icons/plusLeft-blurred.svg" %>">
                    <p class="leftButtonText">
                        Post
                    </p>
                </a>
                <a class="leftButton <%- activeCategory == "messages" ? "selectedButton" : "" %>" id="messagesButtonLeft" href="/messages">
                    <img src="<%- activeCategory == "messages" ? "images/icons/messages.svg" : "images/icons/messages-blurred.svg" %>">
                    <p class="leftButtonText">
                        Messages
                    </p>
                </a>
                <a class="leftButton <%- activeCategory == "profile" ? "selectedButton" : "" %>" id="profileButtonLeft" href="/view-profile">
                    <img src="<%- activeCategory == "profile" ? "images/icons/defaultProfile.svg" : "images/icons/defaultProfile-blurred.svg" %>">
                    <p class="leftButtonText">
                        Profile
                    </p>
                </a>
                <a class="leftButton <%- activeCategory == "settings" ? "selectedButton" : "" %>" id="settingsButtonLeft" href="/settings">
                    <img src="<%- activeCategory == "settings" ? "images/icons/settings.svg" : "images/icons/settings-blurred.svg" %>">
                    <p class="leftButtonText">
                        Settings
                    </p>
                </a>
                <button class="leftButton" id="logOutButtonLeft">
                    <img src="/images/icons/logOut.svg">
                    <p class="leftButtonText">
                        Log Out
                    </p>
                </button>
            <% } else { %>
                <a class="leftButton" id="loginButtonLeft" href="/login">
                    <img src="/images/icons/loginIcon.svg">
                    <p class="leftButtonText">
                        Login
                    </p>
                </a>
            <% } %>
        </div>
    </div>
    <div id="profileWidgetContainer">
        <% if(loggedIn) { %>
            <div id="profileWidget">
                <div id="profileWidgetTop">
                    <img src="<%= profilePicture == "default" ? "/images/icons/defaultProfile.svg" : profilePicture %>" id="profileWidgetImage">
                    <div id="profileWidgetUsernameContainer">
                        <p id="profileWidgetUsername">
                            <%= username %>
                        </p>
                    </div>
                </div>
                <div id="profileWidgetBottom">
                    <p id="profileWidgetLevelLabel">
                        Level <span class="indicator"><%= level %></span>
                        <span class="separator">â€¢</span>
                    </p>
                    <image src="images/icons/notification-blurred.svg" id="profileWidgetNotificationIcon"></image>
                    <p id="profileWidgetNotificationsLabel">
                        0
                    </p>
                </div>
            </div>
        <% } %>
    </div>
    <img src="images/icons/burgerMenu-closed.svg" id="leftBurgerMenu">
</div>
<link rel="stylesheet" href="css/left.css">
<script src="scripts/left.js"></script>
